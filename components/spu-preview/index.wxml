<!--components/spu-preview/index.wxml-->
<wxs src="../../wxs/price.wxs" module="p"></wxs>
<view class="content" bindtap="goodsDetail" data-id="{{data.id}}">
    <image
            lazy-load
            mode="widthFix"
            class="goodsimg"
            src="{{data.img}}"></image>
    <view class="inner-content">
        <text class="title">{{data.title}}</text>
        <view class="tags">
            <block wx:for="{{tags}}">
                <l-tag
                        type="reading"
                        size="super-mini"
                        l-class="l-tags">{{item}}</l-tag>
            </block>
        </view>
        <view class="goodsprice">
            <l-price
                    color="#157658"
                    value-size="28"
                    unit-size="20"
                    autofix
                    value="{{p.getMainPrice(data.price,data.discount_price)}}"></l-price>
            <l-price
                    l-class="lineprice"
                    color="#999999"
                    size="26"
                    wx:if="{{data.discount_price}}"
                    deleted
                    value="{{p.getLinePrice(data.price,data.discount_price)}}"></l-price>
        </view>
        <text class="subtitle">{{data.subtitle}}</text>
    </view>
</view>
